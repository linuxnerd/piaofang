<div class='ui center aligned grid'>
  <div class='ui three wide column'>
    <div class="ui left aligned form segment">
      <%= simple_form_for(@movie) do |f| %>
        <div class="field">
          <%= f.input :torrent_type, label: '片源类型', collection: %w[1080p 720p BRRip BluRay CAM版] %>
        </div>
        <div class="field">
          <%= f.input :torrent_url, label: '链接' %>
        </div>
        <div class="ui buttons">
          <%= f.submit '提交', class: 'ui positive hover button' %>
          <div class="or"></div>
          <%= link_to '返回', movies_path, class: 'ui hover button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.ui.selection.dropdown').dropdown();
</script>
