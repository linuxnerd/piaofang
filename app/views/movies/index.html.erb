      <a class="red item" data-tab="FR">法国票房榜</a>
    </div>

    <div class="ui active tab " data-tab="US">
      <div class="ui label">榜单周 <%= @us.first.year + @us.first.wk %></div>
      <div class='ui segment'>
        <div class="ui divided list ">
          <% @us.each do |item| %>
            <div id='<%= item.area %><%=item.rid %>' class="item" >
              <h3 class="ui left floated header">
                <div class="ui <%= item.rid<=3 ? 'red' : 'teal' %> ribbon label">
                  第<%= item.rid %>名
                </div>
                <%= item.movie.name %>
                <%= render_rating(item.movie.rating) %>
              </h3>
              <h3 class='ui right floated header'>
                <%= link_to edit_movie_path(item.movie.id), class: "circular ui icon button" do %>
                  <i class="icon pencil" data-content="编辑种子地址" data-variation="inverted"></i>
                <% end %>
              </h3>
            </div>
          <% end %>
        </div>
      </div>
    </div>


